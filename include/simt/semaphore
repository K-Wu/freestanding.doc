#ifndef _SIMT_SEMAPHORE
#define _SIMT_SEMAPHORE

#include "atomic"

#include "../details/__config"

#include "../../libcxx/include/semaphore"

namespace simt {

template<thread_scope _Sco, ptrdiff_t least_max_value = INT_MAX>
class counting_semaphore : public std::__semaphore_base<least_max_value, _Sco> 
{
    static_assert(least_max_value <= std::__semaphore_base<least_max_value, _Sco>::max(), "");
public:
    _LIBCPP_INLINE_VISIBILITY
    counting_semaphore(ptrdiff_t count = 0) : std::__semaphore_base<least_max_value, _Sco>(count) { }
    ~counting_semaphore() = default;

    counting_semaphore(const counting_semaphore&) = delete;
    counting_semaphore& operator=(const counting_semaphore&) = delete;
};

template<thread_scope _Sco>
using binary_semaphore = counting_semaphore<_Sco, 1>;

}

#endif //_SIMT_SEMAPHORE
